    <StackLayout Spacing="0"
                 Padding="0"
                 BackgroundColor="Maroon">
        <BoxView HorizontalOptions="FillAndExpand"
                 HeightRequest="100"
                 VerticalOptions="Start"
                 Color="Gray"/>
        <Button BorderRadius="30"
                HeightRequest="60"
                WidthRequest="60"
                BackgroundColor="Red"
                HorizontalOptions="Center"
                VerticalOptions="Start"/>

        <StackLayout HeightRequest="100"
                     VerticalOptions="Start"
                     HorizontalOptions="FillAndExpand"
                     Spacing="20"
                     BackgroundColor="Aquamarine">
            <Label Text="User Name"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"/>
            <Entry Text="Bio + Hashtags"
                   TextColor="White"
                   BackgroundColor="Orange"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="CenterAndExpand">                
            </Entry>      
            
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Label FontSize="14"
                   Text="Age: "
                   TextColor="White"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   WidthRequest="100"/>
            <Entry Text="35"
                   TextColor="White"
                   BackgroundColor="Orange"
                   HorizontalOptions="FillAndExpand">
            </Entry>
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Label FontSize="14"
                   Text="Intereses: "
                   TextColor="White"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   WidthRequest="100"/>
            <Entry Text="Xamarin.Forms"
                   TextColor="White"
                   BackgroundColor="Orange"
                   HorizontalOptions="FillAndExpand">
            </Entry>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label FontSize="14"
                   Text="Preguntame sobre: "
                   TextColor="White"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   WidthRequest="100"/>
            <Entry Text="Node.js, Java, Xamarin, C#, HTML"
                   TextColor="White"
                   BackgroundColor="Orange"
                   HorizontalOptions="FillAndExpand">
            </Entry>
        </StackLayout>

    </StackLayout>
    

</ContentPage>
